#include <iostream>
#include <vector>
#include <fstream>
#include <algorithm>
#include "questao7.h"

using namespace std;

int main(){
    int i=0;
    ifstream arquivo;
    arquivo.open("questao2.txt");

    int valor;

    vector <DadosSensor> dados;
    vector<int>vetor;

    while(arquivo>>valor){
         vetor.push_back(valor);
    }
    sort(vetor.begin(), vetor.end());

    cout<<"Maior valor:"<<vetor[vetor.size()-1]<< endl;
    cout<<"Menor valor:"<<vetor[0]<<endl;
    cout<<endl;

    for(int i=0 ; i<1000; i++) {
        int v, f;
        f=count(vetor.begin(), vetor.end(), i);
        v=vetor[i];
        if(f>0)dados.push_back(DadosSensor(i,f));
    }
    for(int i=0;i<dados.size();i++){ 
        dados[i].printDados();}
    arquivo.close();
    return 0;
}

    